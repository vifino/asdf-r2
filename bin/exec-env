#!/bin/sh
DIR="$ASDF_INSTALL_PATH"
LDIR="$DIR/lib"
BDIR="$DIR/bin"
export \
	LD_LIBRARY_PATH="$LDIR:$LD_LIBRARY_PATH" \
	DYLD_LIBRARY_PATH="$LDIR:$DYLD_LIBRARY_PATH" \
	LIBR_PLUGINS="$LDIR" \
	PKG_CONFIG_PATH="$LDIR/pkgconfig:$PKG_CONFIG_PATH" \
	R2PM_PLUGDIR="$LDIR/radare2/last" \
	R2PM_BINDIR="$BDIR" \
	R2PM_DBDIR="$DIR/r2pm"
